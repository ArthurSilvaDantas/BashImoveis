{
  "name": "bashimoveis",
  "description": "Aplicativo Desktop de Gerenciamento Imobili√°rio",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vue-tsc -b && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "better-sqlite3": "^11.9.1",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.1.2",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vue-tsc": "^2.2.4",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.apsoo.bashimoveis",
    "productName": "BashImoveis",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [],
    "linux": {
      "target": ["AppImage", "snap"],
      "category": "Utility"
    },
    "win": {
      "target": ["nsis", "zip"]
    }
  }
}
